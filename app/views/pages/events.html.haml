:javascript
  $(function() {
    var next = "<img class='a-right control-c next slick-next custom-icon-next' src='#{asset_url('arrow_559.svg')}'>";
    var prev = "<img class='a-left control-c prev slick-prev custom-icon-prev' src='#{asset_url('arrow_559.svg')}'>";

    $('.events').slick({
      slidesToShow: 5,
      slidesToScroll: 1,
      infinite: false,
      prevArrow: prev,
      nextArrow: next,
      responsive: [
        {
          breakpoint: 1024,
          settings: {
            centerPadding: '40px',
            slidesToShow: 3
          }
        },
        {
          breakpoint: 768,
          settings: {
            centerPadding: '40px',
            slidesToShow: 3
          }
        },
        {
          breakpoint: 480,
          settings: {
            centerPadding: '40px',
            slidesToShow: 2
          }
        }
      ],
    });
  });
