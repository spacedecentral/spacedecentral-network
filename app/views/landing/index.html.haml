.container-fluid.container-margin.platform-cover-container
  .platform-cover.landing-cover
    .fixed-bg-slide
      .imgbg.stars-cover
  .container.landing-cover-detail
    .col-md-10.col-md-offset-1{:style => "margin-top: 50px"} 
      .center-text
        %h1
          TO SPACE, TOGETHER
        %h3
          We are building a decentralized space program, connecting engineers, artists, scientists, and future astronauts, to devise and fund next-generation space initiatives. 
        .central-buttons
          = link_to 'Join the team', 'membership', :class=>'btn', :role=>"button" 
          = link_to 'Propose mission', 'forum', :class=>'btn', :role=>"button"

  .container.mt-20
    %h2.section-title.center-text Featured
    #list_programs.row.program-tile-row
      = render partial: 'programs/featured', collection: @featured, as: :program
  .container.mt-20
    %h2.section-title.center-text Programs
    #list_programs.row.program-tile-row
      = render partial: 'programs/program', collection: @programs, as: :program

.container-fluid.container-margin.platform-cover-container
  .platform-cover.landing-cover.medium-post-cover
    .fixed-bg-slide
      .imgbg.stars-cover
  .container.mt-20.mb-30
    .section-title.center-text Recent Posts
    #trending_posts.row
      = render partial: 'posts/post_tile', collection: @trending_posts, as: :post, locals: { remote: true }

.container-fluid.container-margin.platform-cover-container
  .platform-cover.landing-cover.medium-post-cover
    .fixed-bg-slide
      .imgbg.stars-cover
  .container.mb-30
    #medium_posts

.container-fluid.container-margin.platform-cover-container
  .platform-cover.landing-cover.medium-post-cover
    .fixed-bg-slide
      .imgbg.stars-cover

.container-fluid.container-margin.platform-cover-container.bottom-platform-cover-container
  .platform-cover.landing-cover
    .fixed-bg-slide
      .imgbg.stars-cover
  .container.landing-cover-detail.center-text
    #newsletter
      %h3 Sign up for our newsletter
      = form_tag '//spacedecentral.us15.list-manage.com/subscribe/post?u=40bc28142665fd2205e8673ec&amp;id=51ee240061',
        method: :post,
        target: '_blank',
        id: 'newsletter_form',
        onsubmit: "setTimeout(function() { document.getElementById('newsletter_form').reset(); }, 3000);",
        class: 'form-inline col-md-6 col-md-offset-3 col-sm-12 col-xs-12' do
        .form-group.col-xs-9.col-sm-10.col-md-10.col-lg-11.p-0
          = hidden_field_tag 'b_40bc28142665fd2205e8673ec_dc4a585c29'
          = text_field_tag 'EMAIL', nil, class: 'email', id: 'newsletter_email_field', autocomplete: 'off'
        .col-xs-2.col-sm-2.col-md-2.col-lg-1.p-0
          = button_tag 'Submit', value: 'Subscribe', name: 'subscribe', class: 'btn btn-info subscribe-btn'

= render 'shared/footer'
= render "shared/modal_confirmation",
  id: 'post_delete_confirmation_modal',
  title: 'Delete Post',
  content: 'Are you sure you want to send this post into the void?',
  action: { title: 'Delete', method: :delete, remote: false }


