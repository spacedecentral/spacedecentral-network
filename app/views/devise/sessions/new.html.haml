.container-fluid.auth-cover
  .auth-container
    %h2
      Log in to the Cooperative
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      = devise_error_messages!
      .row
        .col-md-12
          = f.email_field :email, autofocus: true , placeholder: "EMAIL ADDRESS", :class=>'auth-field'
          = f.password_field :password, autocomplete: "off" ,placeholder: "PASSWORD", :class=>'auth-field'
      .row
        .col-md-12
          .row
            .col-md-12.auth-password
              -if devise_mapping.rememberable?
                = f.check_box :remember_me
                %span Remember me
              .pull-right
                = link_to "Forgot password?", new_password_path(resource_name)
                / %a{:href=>"/users/password/new"}
                /   %span.new-forgot-pass Forgot?
      .row
        .col-md-12
          = f.submit "Log in with email", :class=>"btn"
      .row
        .col-md-12
          .row
            .col-md-12
              .auth-spacer
      .row
        .col-xs-12.or-divider
          .col-xs-5.left-divider
          .col-xs-2
            %span or
          .col-xs-5.right-divider
      .row
        .col-md-12
          %a.btn.button-google-auth{:href=>"/users/auth/google_oauth2"} Log in with Google
      .row.auth-sign-up
        .col-md-12
      .row
        .col-md-12
          = link_to "Don't have an account? Sign up", new_registration_path(resource_name), :class=>"btn auth-sign-up-btn"
          / %a.btn.auth-sign-up-btn{:href=>"https://goo.gl/forms/iwNfNS0cHRANnTGq2", "target"=>"_blank"}  No account? Apply for alpha.
    = #render "devise/shared/links" %>
